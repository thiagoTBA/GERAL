<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_controller_cliente" tools:context=".ControllerCliente">

    <TextView
        android:text="NOME DO FUNCIONARIO"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtnomefunc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="FONE"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtfonefunc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="SALVAR"
        android:id="@+id/btnsalvar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:text="@string/listaFunc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/ListViewFunc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></ListView>
    <Button
        android:text="LIMPAR"
        android:id="@+id/btnlimpar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
